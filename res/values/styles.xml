<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 项目中按钮的通用样式 -->
    <style name="style_button" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- 项目中EditText的通用样式 -->
    <style name="style_edittext" parent="android:Widget.EditText">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/selector_edittext</item>
    </style>

</resources>